<h3>Developer's Site</h3>
<h1>Hi, <%= current_developer.username %> </h1>

<h3>Your Projects</h3>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <% @user_projects.each do |project| %>
    <tbody id="delProj<%= project.id %>">
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'View Bugs', project_bugs_path(project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Assigned Bugs</h3>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% if @dev_bugs != nil%>
      <% @dev_bugs.each do |bug| %>
      <tbody id="dev_bug_table">
        <tr id="bug_<%= bug.id%>">
          <td><%= bug.title %></td>
          <td><%= bug.project.name %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
