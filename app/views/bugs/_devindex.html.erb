<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @bugs.each do |bug| %>
    <tbody>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.project.name %></td>
        <td><%= link_to 'Assign Yourself',  helpers.assign_dev(bug, current_user) %></td>
        <td><%= link_to 'Mark as Resolved', helpers.resolve(bug) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_project_bug_path(@project) %>
